    <meta property="og:url" content="https://royalpalms.shuff.io">
    <meta property="og:image" content="https://royalpalms.shuff.io/og-image.jpg">
    <meta charset="utf-8">

    <meta http-equiv="refresh" content="5">
  </head>

  <body>
    <%= yield %>
  </body>
